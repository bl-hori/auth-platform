---
# IMPORTANT: This is an example file. Do NOT commit actual secrets to Git.
# Create the actual secrets.yaml file and keep it secure.
#
# To create base64 encoded values:
#   echo -n 'your-password' | base64
#
# To apply secrets:
#   kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: auth-platform-secrets
  namespace: auth-platform-staging
type: Opaque
data:
  # Database credentials (base64 encoded)
  DATABASE_USERNAME: YXV0aHBsYXRmb3Jt  # authplatform
  DATABASE_PASSWORD: YXV0aHBsYXRmb3Jt  # authplatform (CHANGE THIS!)

  # API Keys (base64 encoded)
  ADMIN_API_KEY: ZGV2LWFwaS1rZXktMTIzNDU=  # dev-api-key-12345 (CHANGE THIS!)

  # JWT Secret (base64 encoded)
  JWT_SECRET: eW91ci1zZWNyZXQta2V5LWhlcmU=  # your-secret-key-here (CHANGE THIS!)
